<%= form_for :article, url:"/groups/#{@group.id}/articles", method: :post do |f| %>
    <%= f.label :name, 'Article Name'  %>
    <%= f.text_field :name %>
    <br>
    <%= f.cktext_area :content, ckeditor: {uiColor: '#AADC6E', tpplbar: 'mini'} %>
    <% @group.categories.each do |category| %>
        <%= label_tag(category, category.name) %>
        <%= check_box_tag('category[]',category.id) %><br>
    <% end %>
    <% @category = Category.find_by(name: "General") %>
        <%= label_tag(@category, @category.name) %>
        <%= check_box_tag('@category[]',@category.id) %><br>
    <%= f.submit %>
    <% end %>

